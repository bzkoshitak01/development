<div class="top_bnr_box">
    <ul>
    {%- for block in section.blocks -%}
        <li><a href="{{ block.settings.banner_url }}">{{ block.settings.banner_img | img_url: 'large' | img_tag: block.settings.banner_alt }}</a></li>
    {% endfor %}
    </ul>
</div>

{% schema %}
    {
        "name": "メインバナー",
        "settings": [],
        "blocks": [
            {
                "type": "banner",
                "name": "banner",
                "limit": 2,
                "settings":[
                    {
                        "type": "image_picker",
                        "id": "banner_img",
                        "label": "画像を選択する"
                    },
                    {
                        "type": "url",
                        "id": "banner_url",
                        "label": "バナーURL"
                    },
                    {
                        "type": "text",
                        "id": "banner_alt",
                        "label": "バナーalt"
                    }
                ]
            }
        ],
        "presets": [
            {
            "name": "メインバナー"
            }
        ]
    }
{% endschema %}

